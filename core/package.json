    "@types/mocha": "^2.2.43",
    "@types/mongoose": "^4.7.24",
    "@types/node": "^8.0.31",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "colors": "^1.1.2",
    "mocha": "^3.5.3",
    "mongo-interlude": "^0.2.1",
    "morgan": "^1.9.0",
    "nodemon": "^1.12.1",
    "request": "^2.83.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.3"
  },
