{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "pretty": true,
        "outDir": "./dist",
        "removeComments": true,
        "allowJs": true,
        "lib": [
            "esnext.asynciterable",
            "es6"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "./src/**/*.spec.ts"
    ],
    "compileOnSave": true
}